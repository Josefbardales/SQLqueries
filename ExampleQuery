SELECT 
  loc.name,
  loc.lastname,
  sl.ranking,
  sl.location,
  loc.email
  'FROM Base.ListofCandidates' loc
  LEFT JOIN Base.SkillLevel sl ON sl.user_id = loc.user_id
  WHERE sl.ranking = 1
  
--OUTPUT
name  lastname  ranking  location  email
